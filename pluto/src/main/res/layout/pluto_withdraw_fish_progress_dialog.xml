<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="@dimen/dp_300"
        android:layout_height="@dimen/dp_360"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/pluto_bg1"/>

        <ImageView
            android:id="@+id/img_completed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_40"
            android:background="@drawable/pluto_completed"/>

        <TextView
            android:id="@+id/txt_submitted"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/img_completed"
            android:paddingTop="@dimen/dp_16"
            android:textSize="@dimen/sp_20"
            android:textColor="#000000"
            android:text="Withdraw Submitted"/>

        <TextView
            android:id="@+id/txt_tips"
            android:layout_width="@dimen/dp_226"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/txt_submitted"
            android:paddingTop="@dimen/dp_40"
            android:paddingBottom="@dimen/dp_30"
            android:textSize="@dimen/sp_12"
            android:textColor="#000000"
            android:text="Your request has been submitted.you may wait some seconds until withdraw successful"/>

        <Button
            android:id="@+id/btn_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/txt_tips"
            android:background="@drawable/pluto_button2"
            android:stateListAnimator="@animator/button_scale"
            android:textSize="@dimen/sp_18"
            android:textColor="#ffffff"
            android:textAllCaps="false"
            android:text="OK"/>
    </RelativeLayout>

</RelativeLayout>