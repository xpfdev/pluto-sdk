<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.pluto.view.PlutoBackground
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <ImageView
        android:id="@+id/img_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_50"
        android:background="@drawable/pluto_back2" />

    <RelativeLayout
        android:layout_width="@dimen/dp_320"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_120"
        android:paddingBottom="@dimen/dp_70">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/pluto_bg1"/>

        <LinearLayout
            android:id="@+id/layout_content"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_50"
            android:paddingBottom="@dimen/dp_32">

            <RelativeLayout
                android:id="@+id/layout_account"
                android:layout_width="@dimen/dp_288"
                android:layout_height="@dimen/dp_50">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/pluto_bg2"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingStart="@dimen/dp_16"
                    android:textColor="#5C3024"
                    android:textSize="@dimen/sp_18"
                    android:text="Account"/>

                <TextView
                    android:id="@+id/txt_account"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:paddingEnd="@dimen/dp_18"
                    android:textColor="#FF7E42"
                    android:textSize="@dimen/sp_14"
                    android:text=""/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_wallet"
                android:layout_width="@dimen/dp_288"
                android:layout_height="@dimen/dp_50"
                android:layout_marginTop="@dimen/dp_16">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/pluto_bg2"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingStart="@dimen/dp_16"
                    android:textColor="#5C3024"
                    android:textSize="@dimen/sp_18"
                    android:text="Pluto Wallet"/>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingEnd="@dimen/dp_18"
                    android:layout_alignParentEnd="true">

                    <ImageView
                        android:id="@+id/img_dollar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:background="@drawable/pluto_coin_dollar"/>

                    <TextView
                        android:id="@+id/txt_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@id/img_dollar"
                        android:paddingStart="@dimen/dp_10"
                        android:paddingEnd="@dimen/dp_14"
                        android:textColor="#FF7E42"
                        android:textSize="@dimen/sp_14"
                        android:text="0"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@id/txt_amount"
                        android:background="@drawable/pluto_goto"/>

                </RelativeLayout>

            </RelativeLayout>

        </LinearLayout>

        <Button
            android:id="@+id/btn_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/layout_content"
            android:visibility="visible"
            android:background="@drawable/pluto_button2"
            android:stateListAnimator="@animator/button_scale"
            android:textSize="@dimen/sp_18"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:text="Login"/>

        <TextView
            android:id="@+id/txt_log_out"
            android:layout_width="@dimen/dp_160"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:paddingBottom="@dimen/dp_40"
            android:textColor="#5C3024"
            android:textSize="@dimen/dp_12"
            android:text="@string/pluto_log_out"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_106">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/pluto_title_bg"/>

        <RelativeLayout
            android:layout_width="@dimen/dp_150"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_8">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:background="@drawable/pluto_star"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:textColor="#B54F01"
                android:textSize="@dimen/sp_16"
                android:text="Setting"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:background="@drawable/pluto_star"/>

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>